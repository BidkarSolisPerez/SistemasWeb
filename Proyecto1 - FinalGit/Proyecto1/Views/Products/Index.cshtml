    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductCategory)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.ActionLink("Agregar a Carro", "AgregaCarrito", "Carrito", new { id = item.Product_ID }, null) |
        @Html.ActionLink("Edit", "Edit", new { id = item.Product_ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.Product_ID }) |
